#!/bin/sh

# Builds a .dmb file from dist/pntest.app

# If the DMG already exists, delete it.
test -f "dist/pntest.dmg" && rm "dist/pntest.dmg"

create-dmg \
  --volname "PnTest" \
  --volicon "./p_icon-icons.com_60469.icns" \
  --window-pos 200 120 \
  --window-size 600 300 \
  --icon-size 100 \
  --icon "./p_icon-icons.com_60469.icns" 175 120 \
  --hide-extension "pntest.app" \
  --app-drop-link 425 120 \
  "dist/pntest.dmg" \
  "dist/pntest.app/"
